{
  "name": "Team 5 Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ritwickdey.LiveServer",         // For Sahana to test the UI
        "ms-azuretools.vscode-docker",    // For inspecting images
        "github.vscode-github-actions",   // For Wee Teck to debug the pipeline
        "esbenp.prettier-vscode"          // Standardizes code formatting
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "forwardPorts": [5500, 8080],
  "portsAttributes": {
    "5500": {
      "label": "Game Preview (Live Server)",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "Production Build Test"
    }
  },
  // Automatically installs dependencies and runs team tests on launch
  "postCreateCommand": "npm install && npm test" 
}